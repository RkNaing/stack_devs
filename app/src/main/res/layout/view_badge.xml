<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/badge_rlContainer"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_badge">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/badge_ivBadgeLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/badge_tvScore"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_badge_silver" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/badge_tvScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_badge_score"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@android:color/white"
        tools:text="168" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/badge_tvBadgeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/badge_ivBadgeLogo"
        android:background="@drawable/bg_badge_title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@android:color/white"
        tools:text="@string/lbl_silver" />

</RelativeLayout>